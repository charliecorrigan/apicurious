<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <img class="img" id="avatar" src="<%= @user.avatar_url %>" />
    </div>
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
      <div class='col-md-12 navbar navbar-static-top'>
        <ul class='nav navbar-nav navbar-left'>
          <li>Stars <%= @user.starred_repos.count %></li>
          <li>Followers <%= @user.followers.count %></li>
          <li>Following <%= @user.followed_users.count %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<h2>Recent Contributions</h2>
<div class="activity-feed">
  <% @user.recent_events.each do |event|  %>
    <div class="recent-activity">
       <p class="recent-activity-type"><%= event.event_type %></p>
       <p class="recent-activity-repo"><%= event.repo %></p>
       <p class="recent-activity-created-at"><%= event.created_at %></p>
    </div>
  <% end %>
</div>

<h2>Organizations</h2>
<ul class="organizations">
  <% @user.organizations.each do |organization| %>
  <li><%= organization.login %></li>
  <% end %>
</ul>

<h2>Repositories</h2>
<p id="repos"></p>
